{
  "name": "audio-loader",
  "version": "0.6.0",
  "description": "A flexible web audio sample loader for browser and node",
  "main": "lib/index.js",
  "browser": "lib/browser.js",
  "scripts": {
    "test": "npm run lint && mocha",
    "dist": "browserify lib/browser.js | uglifyjs > dist/audio-loader.min.js && ls -hall dist/",
    "lint": "standard",
    "api": "jsdoc2md lib/index.js > API.md",
    "prepublish": "npm test &&  npm run dist",
    "browser-example": "budo example/browser.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danigb/audio-loader"
  },
  "keywords": [
    "audio",
    "buffer",
    "loader",
    "webaudio",
    "audiojs"
  ],
  "standard": {
    "ignore": [
      "test/support/piano.js"
    ]
  },
  "author": "danigb <danigb@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danigb/audio-loader/issues"
  },
  "dependencies": {
    "audio-context": "^0.1.0",
    "audio-decode": "^1.2.0",
    "is-audio-buffer": "^1.0.1",
    "request": "^2.74.0"
  },
  "devDependencies": {
    "audio-lena": "^1.1.0",
    "audio-play": "audiojs/audio-play",
    "browserify": "^14.3.0",
    "mocha": "^3.2.0",
    "prompt": "^1.0.0",
    "uglifyjs": "^2.4.10",
    "standard": "^10.0.1"
  }
}
